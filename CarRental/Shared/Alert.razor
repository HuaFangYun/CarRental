@code {
    [Parameter] public string Message { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}

@if (!string.IsNullOrEmpty(Message))
{
    <div class="modal-overlay d-flex align-items-center justify-content-center fw-bold">
            <div class="alert-wrapper d-inline-block">
                <div class="alert alert-secondary p-0 border border-2 border-white" role="alert">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12 bg-secondary text-light text-center rounded-top  border-0 border border-white border-bottom">
                                <p class="text-uppercase fs-6 m-2">Invalid or Missing Input</p>
                            </div>
                        </div>
                        <div class="row d-flex align-items-center flex-nowrap m-1">
                            <div class="col text-start p-1">
                            <p class="m-0 text-muted">Add Vehicle / Customer</p>
                            <p class="m-0 text-primary">@Message</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-end m-0">
                                <button @onclick="OnClose" class="btn-close" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
}

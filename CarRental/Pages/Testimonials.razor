<div class="container-fluid p-5">
    <div class="row">
        <div class="col">
            <form>
                <!-- Name -->
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name:</label>
                    <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Your name here">
                </div>
                <!-- Attributes -->
                <div class="mb-3">
                    <label for="attributes" class="form-label">About you:</label>
                    <input type="text" id="attributes" name="attributes" class="form-control" placeholder="Describe yourself in a few words (e.g., Vintage Enthusiast, Art Director etc)">
                </div>
                <!-- Service Rating -->
                <div class="mb-3">
                    <label for="serviceRating" class="form-label">Service:</label>
                    <select id="serviceRating" name="serviceRating" class="form-select">
                        <option value="1">★☆☆☆☆</option>
                        <option value="2">★★☆☆☆</option>
                        <option value="3">★★★☆☆</option>
                        <option value="4">★★★★☆</option>
                        <option value="5">★★★★★</option>
                    </select>
                </div>
                <!-- Efficiency Rating -->
                <div class="mb-3">
                    <label for="efficiencyRating" class="form-label">Efficiency:</label>
                    <select id="efficiencyRating" name="efficiencyRating" class="form-select">
                        <option value="1">★☆☆☆☆</option>
                        <option value="2">★★☆☆☆</option>
                        <option value="3">★★★☆☆</option>
                        <option value="4">★★★★☆</option>
                        <option value="5">★★★★★</option>
                    </select>
                </div>
                <!-- Renting Experience Rating -->
                <div class="mb-3">
                    <label for="experienceRating" class="form-label">Renting Experience:</label>
                    <select id="experienceRating" name="experienceRating" class="form-select">
                        <option value="1">★☆☆☆☆</option>
                        <option value="2">★★☆☆☆</option>
                        <option value="3">★★★☆☆</option>
                        <option value="4">★★★★☆</option>
                        <option value="5">★★★★★</option>
                    </select>
                </div>
                <!-- Additional Comments -->
                <div class="mb-3">
                    <label for="additionalComments" class="form-label">Additional Comments:</label>
                    <textarea id="additionalComments" name="additionalComments" class="form-control" rows="4" placeholder="Share more about your experience..."></textarea>
                </div>
                <!-- Submit Button -->
                <a href="/links" class="btn btn-dark" role="button">Submit Review</a>
            </form>
        </div>
    </div>
</div>
